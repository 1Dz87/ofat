<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.bookkeeping.BookkeeperCreateFragment"
        android:orientation="vertical">
    <Button
            android:text="@string/query_good"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btQueryGood"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"/>
    <Button
            android:text="@string/query_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btQueryUser"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"/>
    <Button
            android:text="@string/query_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btQueryDate"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"/>
    <Button
            android:text="@string/query_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btQueryUser"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.bookkeeping.BookkeepingListFragment"
        android:orientation="vertical">
    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TableLayout android:id="@+id/bookkeepersTable"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:shrinkColumns="*"
                         android:stretchColumns="*">
            </TableLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal" android:layout_marginTop="5dp"
                  android:layout_marginStart="0dp"
                  android:layout_alignParentStart="true" android:layout_alignParentBottom="true"
                  android:layout_alignParentEnd="false" android:gravity="center_horizontal" android:paddingBottom="5dp">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/addBookkeeper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_control_point_black_24dp"
                app:backgroundTint="@color/colorPrimary"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"/>
    </LinearLayout>
</RelativeLayout>
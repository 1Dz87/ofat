<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/start_main_layout"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".ui.main.goods.SelectionBeforeGoodFragment">
    <Button
            android:text="@string/goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btGoodsSelection"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"/>
    <Button
            android:text="@string/good_groups"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btGroups"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"/>

</LinearLayout>